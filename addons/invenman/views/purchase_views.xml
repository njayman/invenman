<odoo>
    <data>
        <!-- Tree view -->
        <record id="invenman.purchase_tree" model="ir.ui.view">
            <field name="name">invenman.purchase.tree</field>
            <field name="model">invenman.purchase</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="supplier_id"/>
                    <field name="purchase_date"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="invenman.purchase_form" model="ir.ui.view">
            <field name="name">invenman.purchase.form</field>
            <field name="model">invenman.purchase</field>
            <field name="arch" type="xml">
                <form string="Product Purchase/Lot">
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="supplier_id"/>
                            <field name="purchase_date"/>
                        </group>
                        <notebook>
                            <page string="Products Received">
                                <field name="lot_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_id"/>
                                        <field name="purchase_price"/>
                                        <field name="sale_price"/>
                                        <field name="available_quantity" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="invenman.purchase_action" model="ir.actions.act_window">
            <field name="name">Product Purchases</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invenman.purchase</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>