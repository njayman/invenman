<odoo>
    <data>
        <record id="invenman.product_tree" model="ir.ui.view">
            <field name="name">invenman.product.tree</field>
            <field name="model">invenman.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id_ref"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="category_id"/>
                    <field name="default_purchase_price"/>
                    <field name="default_sale_price"/>
                    <field name="total_available_quantity"/>
                </tree>
            </field>
        </record>
        <record id="invenman.product_form" model="ir.ui.view">
            <field name="name">invenman.product.form</field>
            <field name="model">invenman.product</field>
            <field name="arch" type="xml">
                <form string="Product">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id_ref" readonly="1"/>
                                <field name="name"/>
                                <field name="category_id"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="default_purchase_price"/>
                                <field name="default_sale_price"/>
                                <field name="total_available_quantity" widget="statinfo" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Inventory Lots">
                                <field name="lot_line_ids">
                                    <tree>
                                        <field name="purchase_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_id"/>
                                        <field name="purchase_price"/>
                                        <field name="sale_price"/>
                                        <field name="available_quantity"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="invenman.product_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">invenman.product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>