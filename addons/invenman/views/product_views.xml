<odoo>
    <data>
        <record id="invenman.product_tree" model="ir.ui.view">
            <field name="name">invenman.product.tree</field>
            <field name="model">invenman.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="category_id"/>
                </tree>
            </field>
        </record>
        <record id="invenman.product_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">invenman.product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>