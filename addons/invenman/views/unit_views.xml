<odoo>
    <data>
        <!-- Tree view -->
        <record id="invenman.unit_tree" model="ir.ui.view">
            <field name="name">invenman.unit.tree</field>
            <field name="model">invenman.unit</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="symbol"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="invenman.unit_form" model="ir.ui.view">
            <field name="name">invenman.unit.form</field>
            <field name="model">invenman.unit</field>
            <field name="arch" type="xml">
                <form string="Unit">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="symbol"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="invenman.unit_action" model="ir.actions.act_window">
            <field name="name">Units</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invenman.unit</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
