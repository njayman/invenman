<odoo>
    <data>
        <!-- Tree view -->
        <record id="invenman.product_lot_tree" model="ir.ui.view">
            <field name="name">invenman.product.lot.tree</field>
            <field name="model">invenman.product_lot</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="supplier_id"/>
                    <field name="quantity"/>
                    <field name="purchase_price"/>
                    <field name="sale_price"/>
                    <field name="available_quantity"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="invenman.product_lot_form" model="ir.ui.view">
            <field name="name">invenman.product.lot.form</field>
            <field name="model">invenman.product_lot</field>
            <field name="arch" type="xml">
                <form string="Product Lot">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="supplier_id"/>
                            <field name="quantity"/>
                            <field name="unit_id"/>
                            <field name="purchase_price"/>
                            <field name="sale_price"/>
                        </group>
                        <group>
                            <field name="sold_quantity" readonly="1"/>
                            <field name="available_quantity" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="invenman.product_lot_action" model="ir.actions.act_window">
            <field name="name">Product Lots</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invenman.product_lot</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>