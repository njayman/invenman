<odoo>
    <data>
        <record id="invenman.product_category_tree" model="ir.ui.view">
            <field name="name">invenman.product_category.tree</field>
            <field name="model">invenman.product_category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="invenman.product_category_action" model="ir.actions.act_window">
            <field name="name">Products Categories</field>
            <field name="res_model">invenman.product_category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>